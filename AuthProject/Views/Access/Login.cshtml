@model AuthProject.Models.VMLogin;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light d-flex align-items-center justify-content-center" style="height: 100vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h1 class="text-center mb-4">Login</h1>
                        <form asp-controller="Access" asp-action="Login" method="post">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input class="form-control" type="email" placeholder="Enter your email" asp-for="Email" />
                            </div>
                            <div class="mb-3">
                                <label asp-for="PassWord" class="form-label">Password</label>
                                <input class="form-control" type="password" placeholder="Enter your password" asp-for="PassWord" />
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" asp-for="KeepLoggedIn" />
                                <label class="form-check-label" asp-for="KeepLoggedIn">Keep me logged in</label>
                            </div>
                            <button class="btn btn-primary w-100" type="submit">Login</button>
                            @if (ViewData["ValidateMessage"] != null)
                            {
                                <div class="alert alert-danger mt-3 text-center">
                                    @ViewData["ValidateMessage"]
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
